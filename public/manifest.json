{
  "manifest_version": 3,
  "name": "React Vite Tailwind Extension",
  "version": "1.0",
  "description": "A Firefox extension using React, Vite, and Tailwind CSS.",
  "action": {
    "default_popup": "index.html"
  },

  "permissions": ["activeTab", "tabs", "storage"
      ,"webRequest",
    "webRequestBlocking"
],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
,

  "icons":{
    "32":"logo32.svg"

  }
}
